pipeline{
    agent any
    tools{
       maven'M2_HOME'
    }
        stages{
            stage("all maven commands"){
                steps{
                    sh 'mvn clean compile install package'
                }
            }
            stage("Sonarqube scan"){
                 steps{
                    withSonarQubeEnv('sonarserver'){
                    sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:4.0.0.4121'
                  }
                  }
             }
        }
    
}
